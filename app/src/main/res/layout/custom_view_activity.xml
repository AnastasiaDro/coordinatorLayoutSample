<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.layoutsamples.TriangleView
        android:id="@+id/triangle"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="100dp"
        custom:speed="@integer/high_speed"
        custom:triangleSize="@integer/big_size"
        custom:color="@color/yellow"
        custom:isAnimated="true"
        />

    <Button
        android:layout_marginTop="300dp"
        android:id="@+id/startAnimationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Rotation" />
    <Button
        android:layout_marginTop="300dp"
        android:id="@+id/stopAnimationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Rotation" />


</LinearLayout>